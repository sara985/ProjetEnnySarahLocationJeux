<Application x:Class="ProjetEnnySarahLocationJeux.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjetEnnySarahLocationJeux"
             Startup="ApplicationStart">
    <Application.Resources>
        <SolidColorBrush x:Key="clrPrimary" Color="#5f5bcc"/>
        <SolidColorBrush x:Key="clrLight">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="mediumColor">#0a95ff</SolidColorBrush>
        <Style TargetType="TextBlock" x:Key="Header">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <Style TargetType="Window" x:Key="win">
            <Setter Property="Background" Value="{StaticResource clrPrimary}"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Title">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Label" x:Key="TitleLable">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>

        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource clrPrimary}"/>
        </Style>
        <Style TargetType="Button" x:Key="firstBtnType">
            <Setter Property="Background" Value="{StaticResource mediumColor}"/>
            <Setter Property="Button.Content" Value="Black"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="hyperlink">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="LightBlue"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Error">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="Yellow"/>
        </Style>
        <!--<Style TargetType="ComboBox">
        </Style>-->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource mediumColor}"/>
            <Setter Property="Button.Content" Value="Black"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
