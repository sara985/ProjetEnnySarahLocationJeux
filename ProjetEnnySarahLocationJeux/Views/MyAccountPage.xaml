<Page x:Class="ProjetEnnySarahLocationJeux.Views.MyAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetEnnySarahLocationJeux.Views"
      xmlns:viewModel="clr-namespace:ProjetEnnySarahLocationJeux.Viewmodels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyAccountPage">

    <Page.DataContext>
        <viewModel:MyAccountViewModel/>
    </Page.DataContext>

    <StackPanel >
        <TextBlock Text="{Binding Player.Balance, StringFormat={}You currently have {0} credits on your account.}"/>
        <TextBlock Text="You are curently renting x games."/>
        <TextBlock Text="X people are renting your games."/>
        <TextBlock Text="Your email :"/>
        <TextBlock Text="{Binding Player.Email}"/>
        <TextBlock Text="Your Username : "/>
        <TextBlock Text="{Binding Player.Username}"/>
        <Button Content="Change Password" Width="150"/>

    </StackPanel>
</Page>
