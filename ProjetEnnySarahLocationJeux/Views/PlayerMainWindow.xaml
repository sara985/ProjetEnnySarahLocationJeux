<Window x:Class="ProjetEnnySarahLocationJeux.Views.PlayerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetEnnySarahLocationJeux.Views"
        xmlns:viewmodel="clr-namespace:ProjetEnnySarahLocationJeux.Viewmodels"
        xmlns:customControls="clr-namespace:ProjetEnnySarahLocationJeux.CustomControls"
        mc:Ignorable="d"
        Title="PlayerMainWindow" Height="450" Width="800">
    

    <Window.DataContext>
        <viewmodel:MainPlayerViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ListBox x:Name="sidebar"  SelectionMode="Single" BorderThickness="0">
            <!-- need to add uri, 18 min 13 in video-->
            <!--<customControls:NavButton ItemName="My account" />-->
        </ListBox>
        <Frame Grid.Column="1" x:Name="navFrame" />
        <TextBlock Text="{Binding CurrentPlayer.Username}" Background="White" Foreground="{StaticResource clrPrimary}" HorizontalAlignment="Right" FontSize="24" Height="30"/>
        <Frame/>
    </Grid>
</Window>
